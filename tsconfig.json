{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
  },
  "include": [
      "src/**/*"
  ],
  "exclude": ["node_modules"]
}